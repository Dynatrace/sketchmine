{
  "extends": "tslint-config-airbnb",
  "rulesDirectory": [
    "./config/tslint-rules/"
  ],
  "linterOptions": {
    "exclude": [
        "_tmp",
        "tests/fixtures"
    ]
  },
  "rules": {
    "no-unused-expression": true,
    "object-shorthand-properties-first": false,
    "max-line-length": {
      "options": [120]
    },
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],

    // Custom Rules
    "ts-loader": true,
    "validation-no-node-natives": true
  }
}
