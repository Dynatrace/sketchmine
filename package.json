{
  "name": "sketch-library",
  "version": "1.0.0",
  "description": "Library for Sketch operations like generating .sketch files from angular components, followed by a Sketch validator and color replacer",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm-run-all --parallel build:dev build:prod",
    "build:dev": "NODE_ENV=development ./node_modules/.bin/rollup -c",
    "build:prod": "NODE_ENV=production ./node_modules/.bin/rollup -c",
    "build:watch": "NODE_ENV=watch ./node_modules/.bin/tsc --watch -p .",
    "run:generator": "node dist/sketch-generator",
    "run:validate": "node dist/sketch-validator",
    "run:color-replacer": "node dist/color-replacer",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --detectOpenHandles --verbose --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverageFrom=src/**/*.ts --coverage src"
  },
  "jest": {
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "@sketch-draw/(.*)": "<rootDir>/src/ng-sketch/sketch-draw/$1",
      "@sketch-draw": "<rootDir>/src/ng-sketch/sketch-draw/index",
      "@sketch-svg-parser/(.*)*": "<rootDir>/src/ng-sketch/sketch-svg-parser/$1",
      "@color-replacer/(.*)": "<rootDir>/src/color-replacer/$1",
      "@utils/(.*)": "<rootDir>/src/utils/$1",
      "@utils": "<rootDir>/src/utils/index"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts",
      "<rootDir>/tests/**/?(*.)test.ts"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "author": "Lukas Holzer <lukas.holzer@dynatrace.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.lab.dynatrace.org/projects/WX/repos/ng-sketch/"
  },
  "devDependencies": {
    "@types/archiver": "^2.1.1",
    "@types/jest": "^23.3.1",
    "@types/puppeteer": "^1.3.1",
    "@types/rimraf": "^2.0.2",
    "@types/unzipper": "^0.8.4",
    "@types/xmldom": "^0.1.29",
    "@types/yargs": "^11.0.0",
    "axios": "^0.18.0",
    "jest": "^23.4.2",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-ts-paths": "^1.0.1",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-jest": "^23.0.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2"
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "chalk": "^2.4.1",
    "extract-zip": "^1.6.7",
    "normalize-css-color": "^1.0.2",
    "puppeteer": "^1.3.0",
    "rimraf": "^2.6.2",
    "svg-path": "^0.2.1",
    "svg-path-parser": "^1.1.0",
    "typescript": "^2.9.2",
    "unzipper": "^0.8.14",
    "xmldom": "^0.1.27",
    "yargs": "^11.0.0"
  }
}
