{
  "name": "@sketchmine/changelog-generation",
  "version": "2.2.0",
  "description": "Generates the changelog for the sketchmine according to the Angular commit style",
  "keywords": [
    "angular",
    "changelog",
    "dynatrace"
  ],
  "author": "Lukas Holzer <lukas.holzer@dynatrace.com>",
  "homepage": "https://github.com/dynatrace/sketchmine#readme",
  "license": "MIT",
  "main": "lib/index.cjs.js",
  "typings": "lib/@types/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Dynatrace/sketchmine/tree/master/packages/changelog-generation"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": " rm -rf lib coverage",
    "build": "yarn clean && rollup -c",
