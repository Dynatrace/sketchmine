    "test": "jest --detectOpenHandles --verbose --forceExit"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.6.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "@sketchmine/node-helpers": "^2.2.0",
    "handlebars": "^4.0.12"
  },
  "bin": {
    "skm-generate-changelog": "./lib/bin.js"
  }
