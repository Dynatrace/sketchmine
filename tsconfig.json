{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.e2e.ts"
  ]
}
