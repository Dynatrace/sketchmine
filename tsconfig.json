{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "es2018", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "types": [ "jest", "node" ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.e2e.ts"
  ]
}
