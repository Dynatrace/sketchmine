
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": [ "es2015", "es2016", "es2017", "dom" ], // we need dom for the traverser in the headless chrome (pupeteer)
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "outDir": "dist/lib",
    "paths": {
      "@sketch-draw/*": ["ng-sketch/sketch-draw/*"],
      "@sketch-draw": ["ng-sketch/sketch-draw/index"],
      "@sketch-svg-parser/*": ["ng-sketch/sketch-svg-parser/*"],
      "@color-replacer/*": ["color-replacer/*"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index"]
    },
    "sourceMap": true,
    "target": "es2017",
    "types": [ "jest" ],
  },
  "include": [
    "tests/**/*.test.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "_tmp",
    "tests/fixtures"
  ],
}
