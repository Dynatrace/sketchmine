{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@sketch-draw/*": ["ng-sketch/sketch-draw/*"],
      "@sketch-draw": ["ng-sketch/sketch-draw/index"],
      "@sketch-svg-parser/*": ["ng-sketch/sketch-svg-parser/*"],
      "@color-replacer/*": ["color-replacer/*"]
    },
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
