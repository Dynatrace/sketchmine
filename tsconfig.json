
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "src",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "ES6",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "outDir": "dest/",
    "sourceMap": true,
    "types": [
      "jest"
    ],
    "typeRoots": [
      "/.node_modules/@types"
    ],
    "paths": {
      "@sketch-draw/*": ["ng-sketch/sketch-draw/*"],
      "@sketch-draw": ["ng-sketch/sketch-draw/index"],
      "@sketch-svg-parser/*": ["ng-sketch/sketch-svg-parser/*"],
      "@color-replacer/*": ["color-replacer/*"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index"]
    },
  },
  "include": [
    "tests/**/*.test.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
  ],
}
